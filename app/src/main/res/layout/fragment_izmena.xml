<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/OdabirProizvoda"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/IDProizvoda"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/nazivProizvodaIzmena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Naziv Proizvoda"
        android:inputType="textPersonName"
        android:layout_marginBottom="20dp"
        />

    <EditText
        android:id="@+id/CenaIzmena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Cena"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/VremeIzmena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Vreme za dostavu"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/KolicinaIzmena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Kolicina"
        android:inputType="number"
        />

    <Spinner
        android:id="@+id/DrzavaIzmena"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/dodajProizvodIzmena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Izmeni Proizvod" />


</LinearLayout>